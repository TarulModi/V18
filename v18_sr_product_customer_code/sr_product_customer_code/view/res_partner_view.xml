<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="sr_inherit_res_partner_form" model="ir.ui.view">
            <field name="name">sr.inherit.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button name="show_product_code" class="oe_stat_button" icon="fa-bars" type="object">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Show Products</span>
                            </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>